<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password, label: "Nueva clave", autocomplete: "off" %>
  <%= f.input :password_confirmation, label: "Confirma la clave", autocomplete: "off" %>
  <%= f.input :current_password %>

  <div class="form-actions"> 
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
  
<% end %>    
<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancela mi cuenta", registration_path(resource_name), :data => { :confirm => "Seguro?" }, :method => :delete %>.</p>

<%= link_to "Volver", :back %>
